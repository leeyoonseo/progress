{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "strict" : true,
        "allowJs": true, 
        "checkJs": true,
        "baseUrl": ".", 
        "paths": {
            "*": ["*"]
        },
        "declaration": false,
        "esModuleInterop": true,
        "rootDir": "./",
        "outDir": "dist",

        "sourceMap": true,
        "watch": true,
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "*.js"
    ]
}